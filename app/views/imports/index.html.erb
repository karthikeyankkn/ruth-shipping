<div class="import-filter-container container">
	<form class="">
		<div class="row">
			<div class="form-group col-md-4">
		    <label for="email" class="mr-sm-2">IMP</label>
		  	<select class="form-control" id="sel1" name="imp">
			    <option selected disabled>Select Imp</option>
			    <% @import_imp.each do |imp| %>
			    	<option><%= imp %></option>
			    <% end %>
			  </select>
	  	</div>
	  	<div class="form-group col-md-4">
		    <label for="email" class="mr-sm-2">IMP</label>
		  	<select class="form-control" id="sel1" name="line">
		  		<option selected disabled>Select Line</option>
			    <option>sea</option>
			    <option>msk</option>
			    <option>MSK</option>
			  </select>
	  	</div>
	  	<div class="form-group col-md-4">
		    <label for="email" class="mr-sm-2">IMP</label>
		  	<select class="form-control" id="sel1" name="status">
		  		<option selected disabled>Select Status</option>
			    <option>COPY</option>
			    <option>Duty paid</option>
			    <option>riginal/check</option>
			  </select>
	  	</div>
		</div>
		<div class="row">
			<div class="col-md-12 text-center">
				<button type="submit" class="btn btn-primary mb-2">Filter</button>
	  		<a href="/imports" class="btn btn-danger mb-2"><i class="fas fa-sync"></i></a>
			</div>
		</div>
	</form>
</div>

<h1 class="text-center">Import details</h1>
<div class="container-fluid">
	<div class="col-md-12">
		<table class="table table-striped">
	    <thead>
	      <tr>
	      	<th>Id</th>
	        <th>Job No</th>
	        <th>IMP</th>
	        <th>Commodity</th>
	        <th>Line</th>
	        <th>Status</th>
	        <th>Arrived</th>
	        <th>Action</th>
	      </tr>
	    </thead>
	    <tbody>
	    	<% @imports.each do |import| %>
		    	<tr>
		    		<td><%= import.id %></td>
		    		<td><%= import.job_no %></td>
		    		<td><%= import.imp %></td>
		    		<td><%= import.supplier_name %> / <%= import.cargo_name %> / <%= import.port_of_loading %></td>
		    		<td><%= import.line %></td>
		    		<td><%= import.status %></td>
		    		<td><%= import.arrived %></td>
		    		<td>
		    			<%= link_to "", import_path(import.id), class:"fas fa-binoculars text-success" %> &nbsp; &nbsp;
                <%= link_to "", edit_import_path(import.id), class:"far fa-edit text-primary" %>&nbsp; &nbsp;
                <%= link_to "", import_path(import.id), method: :delete, data:{confirm: "Are you sure you want to delete"}, class:"far fa-trash-alt text-danger" %>
		    		</td>
		    	</tr>
	      <% end %>
	    </tbody>
	  </table>
	</div>
</div>