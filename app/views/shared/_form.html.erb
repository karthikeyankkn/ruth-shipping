<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages' %>
  <div class="form-group">
    <%= f.text_field :name, placeholder: "Enter name", class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.email_field :email, placeholder: "Enter email", class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.password_field :password, placeholder: "Enter password", class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.password_field :password_confirmation, placeholder: "Enter password again", class:"form-control" %>
  </div>
  <div class="form-group form-check">
    <label class="form-check-label">
      <%= link_to "I already have login", login_path %>
    </label>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
<% end %>