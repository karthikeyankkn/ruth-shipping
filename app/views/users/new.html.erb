<div class="container mt-100">
  <h2 class="text-center">Sign up</h2>
  <div class="row justify-content-center">
    <%= form_for(@user, url: signup_path) do |f| %>
      <%= render 'shared/error_messages' %>
      <div class="form-group">
        <%= f.text_field :name, placeholder: "Enter name", class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.email_field :email, placeholder: "Enter email", class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, placeholder: "Enter password", class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password_confirmation, placeholder: "Enter name", class:"form-control" %>
      </div>
      <div class="form-group form-check">
        <label class="form-check-label">
          <input class="form-check-input" type="checkbox" name="remember"> Remember me
        </label>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
   <% end %>

    <!-- embeded ruby codes -->
    
      
      
      
      


    
  </div>
</div>