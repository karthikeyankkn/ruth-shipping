



<% provide(:title, @user.name) %>
<div class="container-fluid">
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <h1>Hello <u><%= @user.name %></u></h1>
        <h4>Your email address is: <i><%= @user.email %></i></h4>
      </section>
    </aside>
    <div class="col-md-8">
      <% if @user.leads.any? %>
        <h3>Leads (<%= @user.leads.count %>)</h3>
        <ol class="leads">
          <%= render @leads %>
        </ol>
      <% end %>
    </div>
  </div>
</div>