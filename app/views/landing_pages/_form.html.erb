<div class="container">
	<div class="row mt-20">
		<!-- <div class="col-3"></div> -->
		<div class="col-12">
			<%= form_for @landing_page do |f| %>
			  <%= render 'shared/error_messages', object: f.object %>

			  <div class="row">
			  	<div class="form-group col-3">
				    <%= f.text_field :name, placeholder: "Enter Title", class:"form-control" %>
				  </div>
				  <div class="form-group col-3">
				    <%= f.text_field :custom_url, placeholder: "Enter Custem Url", class:"form-control" %>
				  </div>
			  	<!-- 
				  <div class="form-group col-3">
				    <%= f.email_field :email, placeholder: "Enter email", class:"form-control" %>
				  </div>
				  <div class="form-group col-3">
				    <%= f.number_field :phone_number, placeholder: "Enter phone_number", class:"form-control" %>
				  </div>
				  <div class="form-group col-3">
				  	<%= f.text_area :query, class:'form-control', placeholder:'Enter query', rows: 5 %>
				  </div>
				   -->
				  <div class="form-group col-3">
				  	<label>Logo</label>
				  	<%= f.file_field :logo%>
				  </div>
				  <div class="form-group col-3">
				  	<label>banner image</label>
				  	<%= f.file_field :banner_image %>
				  </div>
				  
				  <div class="form-group col-3">
				  	<%= f.text_area :about_description, class:'form-control', placeholder:'Enter about_description', rows: 5 %>
				  </div>
				  <hr style="width: 100%; background: red">
				  <!-- section 1 code -->
				  <div class="form-group col-3">
				  	<label>section_1_image</label>
				  	<%= f.file_field :section_1_image%>
				  </div>
				  <div class="form-group col-3">
				  	<%= f.text_area :section_1_content, class:'form-control', placeholder:'Enter section_1_content', rows: 5 %>
				  </div>
				  <div class="form-group col-3">
				  	<label>section_2_image</label>
				  	<%= f.file_field :section_2_image%>
				  </div>
				  <div class="form-group col-3">
				  	<%= f.text_area :section_2_content, class:'form-control', placeholder:'Enter section_2_content', rows: 5 %>
				  </div>

				  <!-- video section -->
				  <div class="form-group col-3">
				  	<label>video_url</label>
				  	<%= f.file_field :video_url%>
				  </div>

				  <hr style="width: 100%; background: red">

				  <!-- section 3 code -->
				  <div class="row">
				  	<div class="form-group col-4">
					  	<label>section_3_icon_1</label>
					  	<%= f.file_field :section_3_icon_1%><br><br>
					  	<label>section_3_description_1</label>
					  	<%= f.text_area :section_3_description_1, class:'form-control', placeholder:'Enter section_3_description_1', rows: 5 %>
					  </div>
					  <div class="form-group col-4">
					  	<label>section_3_icon_2</label>
					  	<%= f.file_field :section_3_icon_2%><br><br>
					  	<label>section_3_description_1</label>
					  	<%= f.text_area :section_3_description_2, class:'form-control', placeholder:'Enter section_3_description_2', rows: 5 %>
					  </div>
					  <div class="form-group col-4">
					  	<label>section_3_icon_3</label>
					  	<%= f.file_field :section_3_icon_3%><br><br>
					  	<label>section_3_description_3</label>
					  	<%= f.text_area :section_3_description_3, class:'form-control', placeholder:'Enter section_3_description_3', rows: 5 %>
					  </div>
				  </div>

				  <hr style="width: 100%; background: red">
				  <!-- gallery section -->
				  <h3>Gallery</h3>
				  <div class="row">
					  <div class="form-group col-3">
					  	<label>gallery_img_1</label>
					  	<%= f.file_field :gallery_img_1%>
					  </div>
					  <div class="form-group col-3">
					  	<label>gallery_img_2</label>
					  	<%= f.file_field :gallery_img_2%>
					  </div>
					  <div class="form-group col-3">
					  	<label>gallery_img_3</label>
					  	<%= f.file_field :gallery_img_3%>
					  </div>
					  <div class="form-group col-3">
					  	<label>gallery_img_4</label>
					  	<%= f.file_field :gallery_img_4%>
					  </div>
					  <div class="form-group col-3">
					  	<label>gallery_img_5</label>
					  	<%= f.file_field :gallery_img_5%>
					  </div>
					  <div class="form-group col-3">
					  	<label>gallery_img_6</label>
					  	<%= f.file_field :gallery_img_6%>
					  </div>
					  <div class="form-group col-3">
					  	<label>gallery_img_7</label>
					  	<%= f.file_field :gallery_img_7%>
					  </div>
					  <div class="form-group col-3">
					  	<label>gallery_img_8</label>
					  	<%= f.file_field :gallery_img_8%>
					  </div>
					  <div class="form-group col-3">
					  	<label>gallery_img_9</label>
					  	<%= f.file_field :gallery_img_9%>
					  </div>
					  <div class="form-group col-3">
					  	<label>gallery_img_10</label>
					  	<%= f.file_field :gallery_img_10%>
					  </div>
				  </div>
				  <hr style="width: 100%; background: red">
				  <!-- client logo section-->
				  <h3>Client Logo</h3>
				  <div class="row">
					  <div class="form-group col-3">
					  	<label>our_client_logo_1</label>
					  	<%= f.file_field :our_client_logo_1%>
					  </div>
					  <div class="form-group col-3">
					  	<label>our_client_logo_2</label>
					  	<%= f.file_field :our_client_logo_2%>
					  </div>
					  <div class="form-group col-3">
					  	<label>our_client_logo_3</label>
					  	<%= f.file_field :our_client_logo_3%>
					  </div>
					  <div class="form-group col-3">
					  	<label>our_client_logo_4</label>
					  	<%= f.file_field :our_client_logo_4%>
					  </div>
					  <div class="form-group col-3">
					  	<label>our_client_logo_5</label>
					  	<%= f.file_field :our_client_logo_5%>
					  </div>
				  </div>
				  <hr style="width: 100%; background: red">
				  <!-- testimonial section -->
				  
				  <h3>Testimonial</h3>
				  <div class="container-fluid">
				  	<div class="row">
					  	<div class="col-6">
					  		<div class="form-group">
						  		<%= f.text_field :testimonial_1_name, placeholder: "Enter testimonial_1_name", class:"form-control" %><br>
							  	<%= f.text_area :testimonial_content_1, class:'form-control', placeholder:'Enter testimonial_content_1', rows: 5 %>
							  </div>
					  	</div>
						  <div class="col-6">
						  	<div class="form-group">
						  		<%= f.text_field :testimonial_2_name, placeholder: "Enter testimonial_2_name", class:"form-control" %><br>
							  	<%= f.text_area :testimonial_content_2, class:'form-control', placeholder:'Enter testimonial_content_2', rows: 5 %>
							  </div>
						  </div>
					  </div>
				  </div>
				  



			  </div>
			  <%= f.submit "Post", class: "btn btn-primary" %>
			<% end %>
		</div>
	</div>
</div>