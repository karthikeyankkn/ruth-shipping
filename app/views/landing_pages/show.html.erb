<div class="container mt-100">
  <!-- logo and title -->
  <div class="row">
    <div class="col-1 text-dark">
      <p class="text-secondary">
        <img src="<%= @landing_page.logo.url %>" width="100" height="100">
      </p>
    </div>
    <div class="col-11 text-dark text-center">
      <h1><%= @landing_page.name %></h1>
      <p class="text-secondary">( <%= time_ago_in_words(@landing_page.created_at) %> ago )</p>
    </div>
  </div>
  <!-- banner -->
  <div class="row">
    <div class="col-12">
      <img src="<%= @landing_page.banner_image.url %>" width="100%">
    </div>
  </div>
  <!-- about description and form -->
  <div class="row">
    <div class="col-9">
      <h3>Additional Description</h3>
      <p><%= @landing_page.about_description %></p>
    </div>
    <div class="col-3 bg-light">
      <h2>Contact</h2>
      <form action="">
        <div class="form-group">
          <label for="uname">Name:</label>
          <input type="text" class="form-control" id="uname" placeholder="Enter name" name="uname" required>
          <div class="valid-feedback">Valid.</div>
          <div class="invalid-feedback">Please fill out this field.</div>
        </div>
        <div class="form-group">
          <label for="uname">Phone Number:</label>
          <input type="text" class="form-control" id="uname" placeholder="Enter phone_number" name="uname" required>
        </div>
        <div class="form-group">
          <label for="uname">Email:</label>
          <input type="text" class="form-control" id="uname" placeholder="Enter email" name="uname" required>
        </div>
        <div class="form-group text-center">
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>
    </div>
  </div>
  <hr class="bg-dark divider">
  <!-- section 1 -->
  <div class="row mt-20">
    <div class="col-6">
      <img src="<%= @landing_page.section_1_image.url %>" width="300" height="300">
    </div>
    <div class="col-6">
      <p class="text-secondary"><%= @landing_page.section_1_content %></p>
    </div>
  </div>
  <!-- section 2 -->
  <div class="row mt-20">
    <div class="col-6">
      <p class="text-secondary"><%= @landing_page.section_2_content %></p>
    </div>
    <div class="col-6 text-dark">
      <p class="text-secondary">
        <img src="<%= @landing_page.section_2_image.url %>" width="300" height="300">
      </p>
    </div>
  </div>
  <hr class="bg-dark divider">
  <!-- video -->
  <div class="row">
    <div class="col-12">
      <video width="100%" height="350" controls>
        <source src="<%= @landing_page.video_url %>" type="video/mp4">
        <!-- <source src="movie.ogg" type="video/ogg"> -->
        Your browser does not support the video tag.
      </video>
    </div>
  </div>
  <!-- section 3 -->
  <div class="row mt-100">
    <div class="col-12 text-center">
      <h2>Features</h2>
    </div>
    <div class="col-4">
      <div class="card">
        <img class="card-img-top" src="<%= @landing_page.section_3_icon_1 %>" alt="Card image" style="width:100px; margin: auto; padding-top: 10px;">
        <div class="card-body">
          <!-- <h4 class="card-title">John Doe</h4> -->
          <p class="card-text"><%= @landing_page.section_3_description_1 %></p>
          <!-- <a href="#" class="btn btn-primary">See Profile</a> -->
        </div>
      </div>
    </div>
    <div class="col-4">
      <div class="card">
        <img class="card-img-top" src="<%= @landing_page.section_3_icon_1 %>" alt="Card image" style="width:100px; margin: auto; padding-top: 10px;">
        <div class="card-body">
          <!-- <h4 class="card-title">John Doe</h4> -->
          <p class="card-text"><%= @landing_page.section_3_description_1 %></p>
          <!-- <a href="#" class="btn btn-primary">See Profile</a> -->
        </div>
      </div>
    </div>
    <div class="col-4">
      <div class="card">
        <img class="card-img-top" src="<%= @landing_page.section_3_icon_1 %>" alt="Card image" style="width:100px; margin: auto; padding-top: 10px;">
        <div class="card-body">
          <!-- <h4 class="card-title">John Doe</h4> -->
          <p class="card-text"><%= @landing_page.section_3_description_1 %></p>
          <!-- <a href="#" class="btn btn-primary">See Profile</a> -->
        </div>
      </div>
    </div>
  </div>
  <!-- gallery section -->
  <div class="row">
    <div class="col-12 mt-100 text-center">
      <h2>Gallery</h2>
    </div>
    <div class="col-3 text-dark">
      <p class="text-secondary">
