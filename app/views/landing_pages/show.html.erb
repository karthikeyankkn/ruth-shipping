        <img src="<%= @landing_page.gallery_img_10.url %>" width="100%">
      </p>
    </div>
  </div>
  <!-- cutomer logo -->
  <div class="row">
    <div class="col-12 mt-100 text-center">
      <h2>Customer Logo</h2>
    </div>
    <div class="col-4 text-dark">
      <p class="text-secondary">
        <img src="<%= @landing_page.our_client_logo_1.url %>" width="100%">
